<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiviTest.Views.DetailsPage"
             BackgroundColor="White"
             Padding="10,20,0,0">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Subscription"   TextColor="Blue" />
            <Label Text="{Binding DataBalance}" TextColor="Black" />
            <Label Text="{Binding ExpiryDate}" TextColor="Black" />

            <Label Text="================" />

            <Label Text="Product" TextColor="Blue" />
            <Label Text="{Binding ProductName}" TextColor="Black" />
            <Label Text="{Binding ProductPrice}" TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>